generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum TransactionType {
  INCOME
  EXPENSE
}

model User {
  id       String  @id @default(ulid())
  email    String  @unique
  fullName String?
  password String?

  isEmailVerified Boolean @default(false)

  googleId String? @unique

  currency String @default("USD")

  role   UserRole   @default(USER)
  status UserStatus @default(ACTIVE)

  transactions Transaction[]
  categories   Category[] // user-created categories
  budgets      Budget[]

  otps     Otp[]
  sessions Session[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  subscription Subscription?
  payments     Payment[]
}

model Category {
  id        String   @id @default(ulid())
  userId    String?
  name      String
  slug      String // URL-friendly version of name (e.g., "Food & Drinks" -> "food-drinks")
  color     String?
  createdAt DateTime @default(now())

  user              User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  budgetAllocations BudgetAllocation[]

  // System categories (userId is null) must have globally unique slugs
  // User categories must have unique slugs per user
  @@unique([userId, slug])
  @@index([slug]) // For quick lookups when checking against system categories
}

model Transaction {
  id          String          @id @default(ulid())
  userId      String
  categoryId  String?
  amount      Decimal         @db.Decimal(12, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
  @@index([userId, categoryId])
}

// ======= BUDGET (monthly budget record) =======
model Budget {
  id         String   @id @default(ulid())
  userId     String
  month      Int // 1-12
  year       Int
  totalLimit Decimal? @db.Decimal(12, 2) // optional overall monthly limit
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  allocations BudgetAllocation[]

  @@unique([userId, month, year])
}

// ======= BUDGET ALLOCATION (per-category amounts within a Budget) =======
model BudgetAllocation {
  id         String  @id @default(ulid())
  budgetId   String
  categoryId String
  amount     Decimal @db.Decimal(12, 2) // allocated amount for this category in that month

  budget   Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([budgetId, categoryId]) // one allocation per category per budget/month
}

model Otp {
  id        String   @id @default(uuid())
  userId    String
  email     String?  @db.VarChar(320)
  otpHash   String   @db.VarChar(255)
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, email])
  @@index([expiresAt])
}

model Session {
  id               String   @id @default(ulid())
  userId           String
  refreshTokenHash String
  isRevoked        Boolean  @default(false)
  expireAt         DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum SubscriptionPlan {
  PRO_MONTHLY
  PRO_YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ======= SUBSCRIPTION (one per user, manual renewal) =======
model Subscription {
  id     String @id @default(ulid())
  userId String @unique // One subscription per user

  plan   SubscriptionPlan // PRO_MONTHLY, PRO_YEARLY
  status SubscriptionStatus // ACTIVE, EXPIRED, PENDING, CANCELLED

  // When the current period ends (user must pay again before this)
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([status])
  @@index([expiresAt]) // For cron job to mark expired subscriptions
}

enum PaymentProvider {
  RAZORPAY
  STRIPE
}

// ======= PAYMENT (payment history for each subscription purchase/renewal) =======
model Payment {
  id             String  @id @default(ulid())
  subscriptionId String?
  userId         String

  // Plan purchased
  plan SubscriptionPlan

  provider PaymentProvider

  // Payment amount
  amount   Decimal @db.Decimal(12, 2)
  currency String  @db.VarChar(3) // INR, USD

  providerPaymentId String? @unique // Set after payment verified (null during PENDING)
  providerOrderId   String  @unique // Razorpay order_id (always known when order created)

  status PaymentStatus

  // Failure reason (if payment failed)
  failureReason String?

  paidAt    DateTime?
  createdAt DateTime  @default(now())

  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([providerOrderId]) // For Razorpay webhook verification
}

// ======= PLAN PRICING (admin-managed subscription prices) =======
model PlanPricing {
  id       String           @id @default(ulid())
  plan     SubscriptionPlan
  currency String           @db.VarChar(3) // INR, USD

  // Price in smallest unit (paise for INR, cents for USD)
  amount Int

  // Duration in days (30 for monthly, 365 for yearly)
  durationDays Int

  // Whether this plan is currently active/available for purchase
  isActive Boolean @default(true)

  // Display info
  name        String  @db.VarChar(100) // "PRO Monthly", "PRO Yearly"
  description String? @db.VarChar(500)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([plan, currency])
  @@index([isActive])
}
