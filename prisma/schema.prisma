generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum SubscriptionPlan {
  PRO_MONTHLY
  PRO_YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
  CANCELLED
}

model User {
  id       String  @id @default(ulid())
  email    String  @unique
  fullName String?
  password String?

  isEmailVerified Boolean @default(false)

  googleId String? @unique

  currency String @default("USD")

  role   UserRole   @default(USER)
  status UserStatus @default(ACTIVE)

  transactions Transaction[]
  categories   Category[] // user-created categories
  budgets      Budget[]

  otps          Otp[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(ulid())
  userId    String?
  name      String
  color     String?
  createdAt DateTime @default(now())

  user              User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  budgetAllocations BudgetAllocation[]
}

model Transaction {
  id          String          @id @default(ulid())
  userId      String
  categoryId  String?
  amount      Decimal         @db.Decimal(12, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
  @@index([userId, categoryId])
}

// ======= BUDGET (monthly budget record) =======
model Budget {
  id         String   @id @default(ulid())
  userId     String
  month      Int // 1-12
  year       Int
  totalLimit Decimal? @db.Decimal(12, 2) // optional overall monthly limit
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  allocations BudgetAllocation[]

  @@unique([userId, month, year])
}

// ======= BUDGET ALLOCATION (per-category amounts within a Budget) =======
model BudgetAllocation {
  id         String  @id @default(ulid())
  budgetId   String
  categoryId String
  amount     Decimal @db.Decimal(12, 2) // allocated amount for this category in that month

  budget   Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([budgetId, categoryId]) // one allocation per category per budget/month
}

model Otp {
  id        String   @id @default(uuid())
  userId    String
  email     String?  @db.VarChar(320)
  otpHash   String   @db.VarChar(255)
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, email])
  @@index([expiresAt])
}

model Session {
  id               String   @id @default(ulid())
  userId           String
  refreshTokenHash String
  isRevoked        Boolean  @default(false)
  expireAt         DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}


