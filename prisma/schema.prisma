generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======= ENUMS =======
enum UserRole {
  USER
  ADMIN
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum SubscriptionPlan {
  PRO_MONTHLY
  PRO_YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  PENDING
  CANCELLED
}

// ======= USER =======
model User {
  id                      String    @id @default(ulid())
  email                   String    @unique
  fullName                String?
  password                String?
  refreshToken            String?
  isEmailVerified         Boolean   @default(false)
  emailVerificationToken  String?
  emailVerificationExpiry DateTime?
  forgotPasswordToken     String?
  forgotPasswordExpiry    DateTime?
  googleId                String?   @unique
  role                    UserRole  @default(USER)

  // relations
  transactions Transaction[]
  categories   Category[] // user-created categories
  budgets      Budget[] 

  otps          OTP[]
  sessions      Session[]
  subscriptions Subscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(ulid())
  userId    String?
  name      String
  color     String?
  createdAt DateTime @default(now())

  user              User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  budgetAllocations BudgetAllocation[]
}

model Transaction {
  id          String          @id @default(ulid())
  userId      String
  categoryId  String? 
  amount      Decimal         @db.Decimal(12, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())
  

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// ======= BUDGET (monthly budget record) =======
model Budget {
  id         String   @id @default(ulid())
  userId     String
  month      Int // 1-12
  year       Int
  totalLimit Decimal? @db.Decimal(12, 2) // optional overall monthly limit
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  allocations BudgetAllocation[]
}

// ======= BUDGET ALLOCATION (per-category amounts within a Budget) =======
model BudgetAllocation {
  id         String  @id @default(ulid())
  budgetId   String
  categoryId String
  amount     Decimal @db.Decimal(12, 2) // allocated amount for this category in that month

  budget   Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([budgetId, categoryId]) // one allocation per category per budget/month
}

// ======= OTP =======
model OTP {
  id        String   @id @default(ulid())
  userId    String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id           String   @id @default(ulid())
  userId       String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// // ======= SUBSCRIPTION =======
model Subscription {
  id                String             @id @default(ulid())
  userId            String
  plan              SubscriptionPlan
  status            SubscriptionStatus @default(PENDING)
  startDate         DateTime
  endDate           DateTime
  providerPaymentId String? // Stripe/ Razorpay payment id
  providerOrderId   String? // if provider returns order id
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


