{
    "compilerOptions": {
        "target": "ES2023",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "src/**/*",
        "src/types"
    ],
    "exclude": [
        "node_modules"
    ]
}