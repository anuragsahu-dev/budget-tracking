{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
        "src/types/**/*",
        "types"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}